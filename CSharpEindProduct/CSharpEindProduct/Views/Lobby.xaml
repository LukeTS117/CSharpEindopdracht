<Page x:Class="CSharpEindProduct.Views.Lobby"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSharpEindProduct.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Lobby">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/CSharpEindProduct;component/Resources/MenuBackground.jpg"/>
        </Grid.Background>
        <ListView HorizontalAlignment="Left" Height="505" Margin="797,134,0,0" VerticalAlignment="Top" Width="395" RenderTransformOrigin="1.12,-0.076" Background="Transparent">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Sessions:" HorizontalAlignment="Left" Margin="797,84,0,0" VerticalAlignment="Top" FontFamily="Stencil" FontSize="30"/>
        <Label x:Name="AddSession" Content="+Add" HorizontalAlignment="Left" Margin="1112,99,0,0" VerticalAlignment="Top" FontFamily="Stencil" FontSize="27" Height="40" Width="80" MouseDown="AddSessionMouseDown"/>

    </Grid>
</Page>
